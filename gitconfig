[alias]
  co = checkout
  cm = commit --no-verify
  st = status
  br = branch
  pr = pull --rebase
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  ds = diff --staged
  reflg = reflog --date=iso
[core]
  editor = vim
  pager = less -F -X -x4
  excludesfile = ~/.gitignore
  compression = 9
[push]
  default = simple
[include]
  path=~/.git_user
[pack]
  packSizeLimit = 50m
  windowMemory = 50m
